<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4000FFFF"/>
            <size android:width="80dp" android:height="80dp"/>
        </shape>
    </item>
    
    <!-- Main circle -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:startColor="#000040"
                android:endColor="#000020"/>
            <stroke
                android:width="2dp"
                android:color="#00FFFF"/>
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="20dp"
                android:startColor="#2000FFFF"
                android:endColor="#00000000"/>
        </shape>
    </item>
</layer-list> 