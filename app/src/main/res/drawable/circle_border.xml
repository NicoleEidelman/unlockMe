<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#400088FF"/>
            <size android:width="100dp" android:height="100dp"/>
        </shape>
    </item>
    <!-- Inner glow -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%p"
                android:startColor="#6000FFFF"
                android:endColor="#200088FF"/>
        </shape>
    </item>
    <!-- Border -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FF00FFFF"/>
            <gradient
                android:type="radial"
                android:gradientRadius="50%p"
                android:startColor="#40000000"
                android:centerColor="#20000000"
                android:endColor="#10000000"/>
        </shape>
    </item>
</layer-list>
